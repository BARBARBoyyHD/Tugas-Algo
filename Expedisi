# 1. Pendefinisian Struktur Data Linked List

# Class Untuk Node
from typing import Any


class Node:
    def __init__(self, Noresi, Nama, Alamat, Deskripsi,Jarak):
        self.Noresi = Noresi
        self.Nama = Nama
        self.Alamat = Alamat
        self.Deskripsi = Deskripsi
        self.Jarak = Jarak
       
        self.next = None
        self.prev = None

# Class Untuk Linked List
class linkedList:
    def __init__(self):
        self.awal = None
        self.akhir = None
        self.Top = None

    def Kosong(self):
        return self.awal is None
    def Top(self):
        if self.Kosong():
            raise Exception("Peeking from an empty stack")
        return self.awal.next.akhir

    def Push(self, Noresi, Nama, Alamat, Deskripsi,Jarak):
        Baru = Node(Noresi,Nama,Alamat,Deskripsi,Jarak)
        if (self.Kosong()):
            self.akhir = Baru
        elif (not self.Kosong()):
            Baru.next = self.awal
        else:
            Baru.next = self.awal
            self.awal.prev = Baru
        self.awal = Baru

    def Pop(self, Noresi, Nama, Alamat, Deskripsi,Jarak):
        Top = Node(Noresi, Nama, Alamat, Deskripsi,Jarak)
        if (not self.Kosong()):
            Noresi.pop()
            Nama.pop()
            Alamat.pop()
            Deskripsi.pop()
            Jarak.pop()
        else:
            print("Data Paket Kosong !!!    ")

    def BiayaPengiriman(self,Jarak):
        
        if (Jarak >= 20):
            Ongkir = 20000
        else:
            Ongkir = 10000
        return Ongkir

    def TampilPop(self,Noresi, Nama, Alamat, Deskripsi,Jarak):
        if (not self.Kosong()):
            Top = self.awal
            print("           JASA EKSPEDISI            ")
            print("=====================================")
            i = 0
            while (Top != None):
                print(i + 1, " No Resi : ",Top.Noresi, "| Nama :  ", Top.Nama, "| Alamat : ", Top.Alamat, "| Deskripsi :", Top.Deskripsi,"| Ongkir : ",self.BiayaPengiriman(Jarak))
                i += 1
                Top = Top.next
        else:
            print("Data Paket Kosong !!!")

    def penghancuran(self):
        Phapus = self.awal
        while Phapus != None:
            Phapus = Phapus.next
            del Phapus
            Phapus = self.awal
        self.akhir = None
        print("Anda Telah Keluar Dari Aplikasi")


list1 = linkedList()

print("--MENU PILIHAN--")
print("1. Isi Data Paket")
print("2. Tampil Data Paket Yang sedang di proses")
print("0. Keluar")
menu = int(input("Masukkan Menu Pilihan Anda : "))
while (menu != 0):
    if (menu == 1):
        Noresi = str(input("No resi             : "))
        Nama = str(input("Nama Pengirim         : "))
        Alamat = str(input("Alamat              : "))
        Deskripsi = str(input("Deskripsi Barang :"))
        Jarak = int(input("Jarak                : "))
        
        list1.Push(Noresi, Nama, Alamat, Deskripsi,Jarak)
        list1.TampilPop(Noresi, Nama, Alamat, Deskripsi,Jarak)
    elif (menu == 2):
        list1.TampilPop(Noresi, Nama, Alamat, Deskripsi,Jarak)
    elif (menu == 0):
        list1.penghancuran()
    else:
        print("Salah Menu")

    print("--MENU PILIHAN--")
    print("1. Isi Data Paket")
    print("2. Tampil Data Paket")
    print("0. Keluar")
    menu = int(input("Masukkan Menu Pilihan Anda : "))