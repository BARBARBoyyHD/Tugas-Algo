#1. Pendefinisian Struktur Data Linked List

# Class Untuk Node
class Node :
    def _init_(self,info,Noresi,Nama,Alamat,Deskripsi):
        self.info = info
        self.Noresi = Noresi
        self.Nama = Nama
        self.Alamat = Alamat
        self.Deskripsi = Deskripsi
        Noresi = []
        Nama = []
        Alamat = []
        Deskripsi = []
        self.next = None
        self.prev = None

# Class Untuk Linked List
class linkedList:
    def _init_(self):
        self.awal = None
        self.akhir = None

    def Kosong(Top):
        if (Top == 0):
            return False
        else:
            if(Top == 1):
                return True
            else:
                return False

    def Penuh(Top):
        if (Top == 1):
            return True
        else:
            return False
            #Memasukan Data Ke Stack
    def Push(self,Noresi,Nama,Alamat,Deskripsi,Noresibaru,Namabaru,Alamatbaru,Deskripsibaru):

        Top = Node()
        self.Noresi = Noresi
        self.Nama = Nama
        self.Alamat = Alamat
        self.Deskripsi = Deskripsi
        if(not self.Penuh()):
            Noresi = Noresibaru
            Nama = Namabaru
            Alamat = Alamatbaru
            Deskripsi = Deskripsibaru
        else:
            print("Data Paket Sudah Penuh")

    def Pop(self,Noresi,Nama,Alamat,Deskripsi):
        Top=Node()
        if(not self.Kosong()):
            Noresi.pop()
            Nama.pop()
            Alamat.pop()
            Deskripsi.pop()
        else:
            print("Data Paket Kosong !!!    ")

    def TampilPop(self,Noresi,Nama,Alamat,Deskripsi):
        Top = Node()
        if(not self.Kosong()):
        
            while(not self.Kosong()):

                print("----------- Struk Pembayaran -----------")
                print("PT. HAFIZ EXPRESS JAYA MAKMUR SENTOSA ")
                print("NO Resi          : ",Noresi)
                print("Nama Pengirim    : ",Nama)
                print("Alamat           : ",Alamat)
                print("Deskprisi Barang : ",Deskripsi)
                
                if InterruptedError:
                    break

        else :
            print("Data Paket Kosong !!!")


    def SisipDepanDouble(self, Noresi):
        Baru = Node(Noresi)
        if (self.Kosong()):
            self.akhir = Baru
        else:
            Baru.next = self.awal
            self.awal.prev = Baru
        self.awal = Baru

    def penghancuran(self):
        Phapus = self.awal
        while Phapus != None:
            Phapus = Phapus.next
            del Phapus
            Phapus = self.awal
        self.akhir = None
        print("Anda Telah Keluar Dari Aplikasi")



list1 = linkedList()
print("--MENU PILIHAN--")
print("1. Isi Data Paket")
print("2. Tampil Data Paket Yang sedang di proses")
print("0. Keluar")
menu = int(input("Masukkan Menu Pilihan Anda : "))
while (menu != 0 ):
    if(menu == 1):
        if (not list1.Penuh()):
            Noresi = str(input("No resi: "))
            Nama = str(input("Nama Pengirim : "))
            Alamat = str(input("Alamat: "))
            Deskripsi = str(input("Deskripsi Barang :"))
            #Indeks_baru = IndeksNilai(Nilai_Baru)
            #print("Indeks : ",Indeks_baru)
        list1.Push(Noresi,Nama,Alamat,Deskripsi,Noresibaru=Noresi,Namabaru= Nama,Alamatbaru=Alamat,Deskripsibaru=Deskripsi)

    elif (menu == 2):
        list1.TampilPop(Noresi,Nama,Alamat,Deskripsi)
    elif(menu == 0):
        list1.penghancuran()

    else:
        print("Salah Menu")

    print("--MENU PILIHAN--")
    print("1. Isi Data Paket")
    print("2. Tampil Data Paket")
    print("0. Keluar")
    menu = int(input("Masukkan Menu Pilihan Anda : "))
